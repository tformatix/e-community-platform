        android:text="TextView"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/smartmeter_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"/>
</LinearLayout>